<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartKings.ui.setup"
        xmlns:ui="clr-namespace:SmartKings.ui" x:Class="SmartKings.ui.setup.WinPickHeros"
        mc:Ignorable="d"
        Title="WinPickHeros" Height="600" Width="400" FontSize="14" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="135*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <ui:UcHeroList x:Name="ucHeroList" Margin="5,5,5,5" SelectionChanged="ucHeroList_SelectionChanged"/>
        </Grid>
        <Grid Grid.Row="1">
            <TextBox x:Name="txtHeroList" Margin="5,5,5,5" Text="" BorderThickness="3,3,1,1" IsReadOnly="True" />
        </Grid>

        <Grid Grid.Row="2">
            <Button x:Name="btnConfirm" Content="確定" HorizontalAlignment="Right" Margin="0,5,90,5"  Width="75" Click="btnConfirm_Click" />
            <Button x:Name="btnCancel" Content="取消" HorizontalAlignment="Right" Margin="0,5,5,5"  Width="75" Click="btnCancel_Click" />
        </Grid>
    </Grid>
</Window>
