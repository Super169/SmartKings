<Window x:Class="SmartKings.ui.WinAutoTaskConfig"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartKings.ui"
        mc:Ignorable="d"
        Title="WinAutoTaskConfig" Height="402.409" Width="310.843" WindowStartupLocation="CenterOwner">
    <Grid>
        <ListView x:Name="lvTask" Margin="10,10,10,49">
            <ListView.View>
                <GridView>
                    <GridViewColumn >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding isEnabled}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="程序" Width="200"  DisplayMemberBinding="{Binding taskName}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="btnClose" Content="Close" HorizontalAlignment="Left" Margin="218,0,0,10" Width="75" Height="34" VerticalAlignment="Bottom" Click="btnClose_Click"/>

    </Grid>
</Window>
